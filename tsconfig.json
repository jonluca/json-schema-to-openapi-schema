{
	"compilerOptions": {
		"module": "esnext",
		"outDir": "dist/mjs",
		"target": "es2020",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"declaration": true,
		"esModuleInterop": true,
		"inlineSourceMap": false,
		"lib": ["esnext"],
		"listEmittedFiles": false,
		"listFiles": false,
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"pretty": true,
		"resolveJsonModule": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"noImplicitAny": false,
		"strict": true,
		"sourceMap": true,
		"types": ["vitest/globals"]
	},
	"compileOnSave": false,
	"exclude": ["node_modules", "dist", "coverage", "bin"],
	"include": ["src", "test"]
}
